{
    
    "version": "0.2.0",
    "configurations": [       
        
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",                      
            "port": 9003,
            "pathMappings": {
                //Folder in the container / Folder where your laravel project is located
                "/var/www": "${workspaceRoot}/src"
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003
        }
    ]
}

    